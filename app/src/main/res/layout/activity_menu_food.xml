<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="7dp"
    android:background="#494747"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuFood">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:orientation="horizontal">
        
        <TextView
            android:fontFamily="@font/roboto_bolditalic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:textColor="#ff9800"
            android:text="Food"/>

        <TextView
            android:textColor="#fff"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/roboto_bolditalic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:text="Menu"/>

        <ImageView
            android:id="@+id/img_backFoodMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="224dp"
            android:src="@drawable/ic_back_32"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:paddingLeft="16dp"
        android:textColor="#fff"
        android:fontFamily="@font/roboto_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="Description food menu"/>

        <EditText
            android:id="@+id/edt_SearchMenu"
            android:layout_marginLeft="80dp"
            android:textColor="#fff"
            android:drawableEnd="@drawable/search"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_menu"
        android:layout_marginTop="18dp"
        android:layoutAnimation="@anim/layout_animation_left_to_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>