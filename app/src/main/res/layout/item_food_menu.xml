<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/primaryColor"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <com.ramotion.foldingcell.FoldingCell
        android:id="@+id/foldingCell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<!--            Đánh giá food-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

<!--            Image Important-->
            <ImageView
                android:id="@+id/img_TitleMenu"
                android:src="@drawable/food1"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>

        <LinearLayout
            android:background="#F1E7E4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_title_menuCollapse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Food Menu1"
                            android:textColor="#DF7351"
                            android:textSize="24dp" />


                        <LinearLayout
                            android:layout_marginTop="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/rate" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/rate"
                                android:layout_marginLeft="2dp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/rate"
                                android:layout_marginLeft="2dp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/rate"
                                android:layout_marginLeft="2dp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/rate"
                                android:layout_marginLeft="2dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:textSize="20dp"
                                    android:textColor="#6A90B5"
                                    android:fontFamily="@font/roboto_bold"
                                    android:layout_height="wrap_content"
                                    android:text="20" />

                                <TextView
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:textSize="14dp"
                                    android:textColor="#DF6A90B5"
                                    android:fontFamily="@font/roboto_regular"
                                    android:layout_height="wrap_content"
                                    android:text="Minute" />
                            </LinearLayout>

                            <ImageView
                                android:layout_marginLeft="16dp"
                                android:layout_width="wrap_content"
                                android:src="@drawable/split"
                                android:layout_height="match_parent" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="16dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:textSize="20dp"
                                    android:textColor="#6A90B5"
                                    android:fontFamily="@font/roboto_bold"
                                    android:layout_height="wrap_content"
                                    android:text="15" />

                                <TextView
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:textSize="14dp"
                                    android:textColor="#EE6A90B5"
                                    android:fontFamily="@font/roboto_regular"
                                    android:layout_height="wrap_content"
                                    android:text="Nutritions" />
                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img_menuCollapse"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="-8dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/food1" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="6dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">


                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/like" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="320 Likes"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="#F06A90B5"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">


                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/comment" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="14 Comments"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="#F06A90B5"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">


                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_share_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Share"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="#F06A90B5"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        </LinearLayout>


<!--        Interface food-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_foodMenu"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/food1" />

        <RelativeLayout
            android:layout_width="316dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_name_foodMenu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Potato Fingers"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_price_foodMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name_foodMenu1"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="normal"
                android:text="20$"/>

            <TextView
                android:id="@+id/tv_moTa_foodMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_price_foodMenu"
                android:layout_marginTop="4dp"
                android:text="Non Vegetarian - Egg"
                android:textColor="#C3C3C3"
                android:textSize="14dp" />

            <Button
                android:id="@+id/btn_foodMenu"
                android:layout_width="110dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="24dp"
                android:background="@drawable/button"
                android:text="Detail"
                android:textColor="#fff"
                android:textSize="11dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>



    </com.ramotion.foldingcell.FoldingCell>

</LinearLayout>